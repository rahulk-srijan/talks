function videolibrary_core_block_view($delta = '') {
    switch ($delta) {
        case 'site_switching':
            $block['subject'] = null; // Most forms don't have a subject
//    $block['content'] = noti_block_view();
            $block['content'] = site_switching();
            break;
        case 'category_menu':
            $block['subject'] = null; // Most forms don't have a subject
//    $block['content'] = noti_block_view();
            $block['content'] = category_menu();
            break;
    }
    return $block;
}

