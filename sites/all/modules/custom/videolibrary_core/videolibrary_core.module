function category_menu() {
    global $user;
    $argument = explode('/', request_path());
    global $subsite_home_page_url;
    $category_vocab = array('orginaction' => 'category', 'btoacademy' => 'bto_category', 'opsinaction' => 'ops_category','it'=>'it_category','ndm'=>'ndm_category','entrepreneur'=>'entrepreneur_category','compete'=>'compete_category');

